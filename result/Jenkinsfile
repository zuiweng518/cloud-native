pipeline {
 agent {
   kubernetes {
     yaml """
       kind: Pod
       metadata:
         name: kaniko
       spec:
         containers:
         - name: jnlp
           workingDir: /home/jenkins
         - name: kaniko
           workingDir: /home/jenkins
           image: bitnami/kaniko:latest
           command:
           - /busybox/cat
           tty: true
           volumeMounts:
           - name: kaniko-secret
             mountPath: /root/.kaniko/
         restartPolicy: Never
         volumes:
         - name: kaniko-secret
           secret:
             secretName: kaniko-secret
"""
   }
 }
 stages {
   
   stage('Build DockerImage with Kaniko') {
     environment {
       PATH = "/busybox:/kaniko:$PATH"
     }
     steps {
       container(name: 'kaniko', shell: '/busybox/sh') {


         sh '''#!/busybox/sh
           /kaniko/executor --context `pwd` --dockerfile Dockerfile --verbosity debug --destination zuiweng518/web:v1.0
         '''
       }
     }
   }
 }
}
